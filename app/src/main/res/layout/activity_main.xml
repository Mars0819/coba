<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:text="Total Kasus Covid-19 di Indonesia"
        />
    <TextView
        android:layout_below="@+id/tvtv1"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_below="@+id/tv1"
        android:id="@+id/tvtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="Total Penderita Covid-19 Sembuh"
        />
    />
    <TextView
        android:id="@+id/tv2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvtv2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />
    <TextView
        android:layout_below="@+id/tv2"
        android:id="@+id/tvtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="Total Penderita Covid-19 Meninggal"
        />
    />
    <TextView
        android:id="@+id/tv3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvtv3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />

    <TextView
        android:layout_below="@+id/tv3"
        android:id="@+id/tvtv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Umar Alfaruq Abdul Aziz\nJVAN-KS04-003"
        />
    <TextView
        android:layout_below="@+id/tvtv0"
        android:id="@+id/tvtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="10dp"
        android:textAlignment="center"
        android:text="https://data.covid19.go.id/public/api/update.json"
        />
</RelativeLayout>